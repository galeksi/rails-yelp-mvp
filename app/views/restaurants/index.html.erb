<h2 class="text-center text-primary mb-5">All restaurants</h2>
<div class="restaurant-cards">
  <% @restaurants.each do |restaurant| %>
    <div class="restaurant-card pb-5">
      <h3><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-success" %></h3>
      <p class="text-capitalize"><%= restaurant.category %></p>
      <p><%= restaurant.address %></p>
      <p><%= restaurant.phone_number %></p>
      <p>Reviews: <%= restaurant.reviews.count %></p>
    </div>
  <% end %>
</div>
